{% extends "default_admin.twig" %}

{% block content %}

<h2 class="text-uppercase">Editar usuário</h2>
<form action = "admin/user/{{USER.USER_PK}}" method="post">
    <h5 class="text-uppercase text-muted mt-4 mb-4">Informações gerais</h5>
    <div class="ml-3">
        <div class="form-group">
            <input type="text" name="user_pk"value="{{USER.USER_PK}}" hidden>
            <label for="user_name">Nome completo</label>
            <input type="text" class="form-control" name="user_name"  value="{{USER.USER_NAME}}" required>
        </div>

        <div class="form-group">
            <label for="user_email">Endereço de e-mail</label>
            <input type="email" class="form-control" name="user_email"  value="{{USER.USER_EMAIL}}" required>
        </div>
        
        <div class="form-group">
            <label for="user_cpf">CPF</label>
            <input type="text" class="form-control" name="user_cpf" value="{{USER.USER_CPF}}" required>
        </div>

        <div class="form-group">
            <label for="user_birth">Data de nascimento</label>
            <input type="date" class="form-control" name="user_birth"  value="{{USER.USER_BIRTH}}" required>
        </div>

        <div class="form-group">
            <label for="user_phone">Telefone celular</label>
            <input type="text" class="form-control" name="user_phone"  value="{{USER.USER_PHONE}}" required>
        </div>

        <div class = "form-group">
            <label for="user_adm">Tipo de usuário</label>
            <select name="user_type" class="form-control">
                <option value="0" >Usuário</option>
                <option value="1" >Administrador</option>
            </select>
        </div>
    </div>
    
    <h5 class="text-uppercase text-muted mt-4 mb-4">Informações de autenticação</h5>
    <div class="ml-3">
        <div class="form-group">
            <label for="user_login">Nome de usuário</label>
            <input type="text" class="form-control" name="user_login"  value="{{USER.USER_LOGIN}}" required>
        </div>
    </div>

    <div class="form-group text-right">
        <button name="action" value="SALVAR" type="submit" class="btn btn-primary"><i class="fa fa-save"></i> SALVAR</button>
        <button name ="action" value="REMOVER" type ="submit" class="btn btn-outline-danger"><i class="fa fa-trash"></i> REMOVER</button>
    </div>
</form> 
{% endblock %}

{% block scripts %}
{% endblock %}