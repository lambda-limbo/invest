<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <title>Invest</title>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <base href="{{ base_url }}">

        <link href="assets/img/logo/favicon.ico" rel="shortcut icon" type="image/x-icon">

        <link href="assets/css/theme.css" rel="stylesheet">
        <link href="assets/css/all.min.css" rel="stylesheet">        
        <link href="assets/css/bootstrap.min.css" rel="stylesheet">
        <link href="assets/css/override.css" rel="stylesheet">

        <script src="assets/js/jquery.min.js" defer></script>
        <script src="assets/js/bootstrap.bundle.min.js" defer></script>
    </head>
    <body class="">
        {% if error %}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>{{ error.CODE }}</strong> {{ error.MESSAGE }}. {{ error.EXCEPTION }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {% endif %}

        <nav class="navbar navbar-expand-lg navbar-light">
            <a href="/" class="navbar-brand">
                <img src="assets/img/logo/mllr.png" width="125" height="50" alt="MLLR logo">
            </a>
            
            <button class="navbar-toggler" data-target="#collapsible-navbar" data-toggle="collapse" type="button">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="collapsible-navbar">
                <ul class="navbar-nav ml-auto navbar-nav">
                    {% for item, value in navigation_admin %}
                        {% if item == "logout" %}
                        <li class="nav-item">
                            <a href="{{ base_url }}admin{{ value['url'] }}" class="btn btn-outline-dark ml-2">{{ item }} <i class="{{ value['icon']}}"></i> </a>
                        </li>
                        {% else %}
                        <li class="nav-item"><a href="{{ base_url }}admin{{ value['url'] }}" class="btn btn-light mr-2"><i class="{{ value['icon']}}"></i> {{ item }}</a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </nav>
        
        <section class="container mt-5">
            {% block content %}
            {% endblock %}
        </section>

        {% block scripts %}
        {% endblock %}
    </body>
</html>
